            .eight.columns
              %form
                .row
                  .six.columns
                    %label Name
                    %input{:type => 'text'}
                  .six.columns
                    %label Email
                    %input{:type => 'email'}
                  .twelve-columns
                    %label Message
                    %textarea
                %input{:type => 'submit'}


